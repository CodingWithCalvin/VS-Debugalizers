<UserControl x:Class="CodingWithCalvin.Debugalizers.UI.Views.TreeViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    <Grid>
        <TreeView x:Name="ContentTree"
                  FontFamily="Consolas"
                  FontSize="12"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Key}" FontWeight="Bold" Foreground="DarkBlue"/>
                        <TextBlock Text=": " Visibility="{Binding HasValue, Converter={StaticResource BoolToVisibility}}"/>
                        <TextBlock Text="{Binding Value}" Foreground="DarkGreen"/>
                        <TextBlock Text="{Binding TypeHint}" Foreground="Gray" FontStyle="Italic" Margin="4,0,0,0"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>
